<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cost Sheet Sequence -->
        <record id="seq_cost_sheet" model="ir.sequence">
            <field name="name">Cost Sheet Sequence</field>
            <field name="code">drkds.cost.sheet</field>
            <field name="prefix">CS</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Template Sequence -->
        <record id="seq_template" model="ir.sequence">
            <field name="name">Template Sequence</field>
            <field name="code">drkds.cost.template</field>
            <field name="prefix">TPL</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Component Sequence -->
        <record id="seq_component" model="ir.sequence">
            <field name="name">Component Sequence</field>
            <field name="code">drkds.kit.component</field>
            <field name="prefix">COMP</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
    </data>
</odoo>