<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- GREENHOUSE TYPE VIEWS -->
    <!-- ============================================ -->
    
    <!-- Greenhouse Type Form View -->
    <record id="view_greenhouse_type_form" model="ir.ui.view">
        <field name="name">greenhouse.type.form</field>
        <field name="model">greenhouse.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_projects" type="object" class="oe_stat_button" icon="fa-folder-open">
                            <field name="project_count" widget="statinfo" string="Projects"/>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Greenhouse Type Name"/>
                        </h1>
                        <label for="code" class="oe_edit_only"/>
                        <h3>
                            <field name="code" placeholder="Type Code (e.g., nvph)"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="General Information">
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="icon" placeholder="fa-home"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group string="Characteristics">
                            <field name="typical_size" placeholder="e.g., 500-5000 sqm"/>
                            <field name="typical_use" placeholder="e.g., Vegetables, Flowers"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Detailed description of this greenhouse type..."/>
                        </page>
                        
                        <page string="Sections" name="sections">
                            <field name="section_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="icon"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_mandatory"/>
                                    <field name="requires_pipe"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Default Values" name="defaults">
                            <group string="Default Input Values">
                                <field name="default_inputs" widget="ace" options="{'mode': 'json'}" 
                                       placeholder='{"total_span_length": 100, "total_bay_length": 50}'/>
                            </group>
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle"/> Enter default values as JSON. These will be used when creating new projects with this greenhouse type.
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Greenhouse Type Tree View -->
    <record id="view_greenhouse_type_tree" model="ir.ui.view">
        <field name="name">greenhouse.type.tree</field>
        <field name="model">greenhouse.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="icon"/>
                <field name="name"/>
                <field name="code"/>
                <field name="typical_size"/>
                <field name="typical_use"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Greenhouse Type Kanban View -->
    <record id="view_greenhouse_type_kanban" model="ir.ui.view">
        <field name="name">greenhouse.type.kanban</field>
        <field name="model">greenhouse.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="icon"/>
                <field name="color"/>
                <field name="typical_size"/>
                <field name="typical_use"/>
                <field name="description"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card #{kanban_color(record.color.raw_value)}">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('greenhouse.type', 'image', record.id.raw_value)" 
                                     alt="Type" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <i t-att-class="record.icon.value"/> 
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="code"/>
                                </div>
                                <div>
                                    <span class="badge badge-pill badge-info">
                                        <field name="typical_size"/>
                                    </span>
                                </div>
                                <div class="text-muted">
                                    <small><field name="typical_use"/></small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ============================================ -->
    <!-- SECTION TEMPLATE VIEWS -->
    <!-- ============================================ -->
    
    <!-- Section Template Form View -->
    <record id="view_greenhouse_section_template_form" model="ir.ui.view">
        <field name="name">greenhouse.section.template.form</field>
        <field name="model">greenhouse.section.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="icon" class="oe_inline" placeholder="fa-cube"/>
                            <field name="name" class="oe_inline" placeholder="Section Name"/>
                        </h1>
                        <label for="code" class="oe_edit_only"/>
                        <h3>
                            <field name="code" placeholder="Section Code (e.g., frame)"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Configuration">
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group string="Settings">
                            <field name="is_mandatory"/>
                            <field name="requires_pipe"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Input Fields" name="input_fields">
                            <field name="input_fields" widget="ace" options="{'mode': 'json'}"/>
                            <div class="alert alert-info mt-2">
                                <h4>Input Field Structure:</h4>
                                <pre>
[
    {
        "code": "column_height",
        "label": "Column Height (m)",
        "type": "float",
        "default": 4.5,
        "min": 2.0,
        "max": 10.0,
        "sequence": 10,
        "help": "Height of the column"
    }
]
                                </pre>
                            </div>
                        </page>
                        
                        <page string="Calculation Rules" name="calculation_rules">
                            <field name="calculation_rules" widget="ace" options="{'mode': 'json'}"/>
                            <div class="alert alert-info mt-2">
                                <h4>Calculation Rule Structure:</h4>
                                <pre>
[
    {
        "code": "MAIN_COLUMNS",
        "name": "Main Columns",
        "formula": "GET('no_of_spans') * 2",
        "sequence": 10,
        "length_per_unit": "GET('column_height')"
    }
]
                                </pre>
                                <h5 class="mt-3">Available Functions:</h5>
                                <ul>
                                    <li>GET('field_code') - Get input value</li>
                                    <li>CALC('calculation_code') - Get calculated value</li>
                                    <li>INT(x), CEIL(x), FLOOR(x), ABS(x)</li>
                                    <li>MIN(a, b), MAX(a, b)</li>
                                </ul>
                            </div>
                        </page>
                        
                        <page string="Used In Types" name="used_in">
                            <field name="type_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="typical_use"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Section Template Tree View -->
    <record id="view_greenhouse_section_template_tree" model="ir.ui.view">
        <field name="name">greenhouse.section.template.tree</field>
        <field name="model">greenhouse.section.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="icon"/>
                <field name="name"/>
                <field name="code"/>
                <field name="is_mandatory" widget="boolean_toggle"/>
                <field name="requires_pipe" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- ============================================ -->
    <!-- SEARCH VIEWS -->
    <!-- ============================================ -->
    
    <record id="view_greenhouse_type_search" model="ir.ui.view">
        <field name="name">greenhouse.type.search</field>
        <field name="model">greenhouse.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="typical_use"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Typical Use" name="group_use" context="{'group_by': 'typical_use'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="view_greenhouse_section_template_search" model="ir.ui.view">
        <field name="name">greenhouse.section.template.search</field>
        <field name="model">greenhouse.section.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Mandatory" name="mandatory" domain="[('is_mandatory', '=', True)]"/>
                <filter string="Optional" name="optional" domain="[('is_mandatory', '=', False)]"/>
                <separator/>
                <filter string="Requires Pipe" name="pipe" domain="[('requires_pipe', '=', True)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <!-- ============================================ -->
    <!-- ACTIONS (without menu items) -->
    <!-- ============================================ -->
    
    <record id="action_greenhouse_type" model="ir.actions.act_window">
        <field name="name">Greenhouse Types</field>
        <field name="res_model">greenhouse.type</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_greenhouse_type_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Greenhouse Type
            </p>
            <p>
                Define different greenhouse types like NVPH, Tunnel, Fan and Pad, etc.
                Each type can have different sections and default values.
            </p>
        </field>
    </record>
    
    <record id="action_greenhouse_section_template" model="ir.actions.act_window">
        <field name="name">Section Templates</field>
        <field name="res_model">greenhouse.section.template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_greenhouse_section_template_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section Template
            </p>
            <p>
                Define sections like Frame, Truss, ASC, Gutter, etc.
                Each section can have input fields and calculation rules.
            </p>
        </field>
    </record>
</odoo>