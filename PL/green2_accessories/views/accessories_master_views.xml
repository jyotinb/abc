<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Accessories Master Form View -->
    <record id="view_accessories_master_form" model="ir.ui.view">
        <field name="name">accessories.master.form</field>
        <field name="model">accessories.master</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Accessory Name"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="category"/>
                            <field name="sequence"/>
                            <field name="size_specification"/>
                        </group>
                        <group string="Pricing">
                            <field name="unit_price" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group string="Additional Information">
                        <field name="notes" placeholder="Add any special notes or specifications"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
	
	<record id="total_profile_master" model="accessories.master">
    <field name="name">Total Profile</field>
    <field name="category">profiles</field>
    <field name="sequence">10</field>
    <field name="size_specification">meters</field>
    <field name="unit_price">0.0</field>
</record>

    <!-- Accessories Master Tree View -->
    <record id="view_accessories_master_tree" model="ir.ui.view">
        <field name="name">accessories.master.tree</field>
        <field name="model">accessories.master</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category"/>
                <field name="size_specification"/>
                <field name="unit_price" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Accessories Master Search View -->
    <record id="view_accessories_master_search" model="ir.ui.view">
        <field name="name">accessories.master.search</field>
        <field name="model">accessories.master</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category"/>
                <field name="size_specification"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Brackets" name="brackets" domain="[('category', '=', 'brackets')]"/>
                <filter string="Wires &amp; Connectors" name="wires_connectors" domain="[('category', '=', 'wires_connectors')]"/>
                <filter string="Clamps" name="clamps" domain="[('category', '=', 'clamps')]"/>
                
                <group string="Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                    <filter string="Active Status" name="group_by_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_accessories_master" model="ir.actions.act_window">
        <field name="name">Accessories Master</field>
        <field name="res_model">accessories.master</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_group_by_category': 1}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_accessories_master" 
              name="Accessories Master" 
              parent="green2.menu_pipe_master" 
              action="action_accessories_master" 
              sequence="50"/>

</odoo>