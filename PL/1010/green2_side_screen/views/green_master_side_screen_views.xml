<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_greenhouse_project_form_side_screen" model="ir.ui.view">
        <field name="name">greenhouse.project.form.side_screen</field>
        <field name="model">greenhouse.project</field>
        <field name="inherit_id" ref="drkds_gh_base.view_greenhouse_project_form"/>
        <field name="arch" type="xml">
            <!-- Add Side Screen Configuration page to notebook -->
            <xpath expr="//notebook/page[@string='Advanced Configuration']" position="after">
                <page string="Side Screen">
                    <group>
                        <group string="Screen Configuration">
                            <field name="no_of_curtains"/>
                            <field name="side_screen_guard"/>
                            <field name="side_screen_guard_box"/>
                        </group>
                        <group string="Screen Information">
                            <label string="Side Screen System"/>
                            <div class="text-muted">
                                Configure roll-up screens for climate control.
                                Guards and guard boxes provide additional protection.
                            </div>
                        </group>
                    </group>
                    <separator string="Roll Up System"/>
                    <group>
                        <div class="alert alert-info" role="alert">
                            Roll up pipes and handles are calculated based on bay length and number of curtains
                        </div>
                    </group>
                    <separator string="Side Screen Components Summary"/>
                    <group>
                        <field name="total_side_screen_cost" readonly="1"/>
                    </group>
                </page>
            </xpath>
            
            <!-- Add total cost to main view -->
            <field name="grand_total_cost" position="after">
                <field name="total_side_screen_cost" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>