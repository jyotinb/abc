<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Clamp Calculation Detail Form View -->
    <record id="view_clamp_calculation_detail_form" model="ir.ui.view">
        <field name="name">clamp.calculation.detail.form</field>
        <field name="model">clamp.calculation.detail</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_export_excel" 
                            string="ðŸ“¥ Export to Excel" 
                            type="object" 
                            class="btn-success"
                            invisible="not calculation_line_ids"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="green_master_display" readonly="1" nolabel="1"/>
                        </h1>
                    </div>
                    
                    <group col="4">
                        <field name="calculation_date" readonly="1"/>
                        <newline/>
                        <field name="total_quantity" readonly="1"/>
                        <field name="total_cost" readonly="1" widget="monetary"/>
                    </group>
                    
                    <notebook>
                        <page string="Calculation Details">
                            <field name="calculation_line_ids" nolabel="1" readonly="1">
                                <tree create="false" edit="false" delete="false">
                                    <field name="category"/>
                                    <field name="component"/>
                                    <field name="clamp_type"/>
                                    <field name="size"/>
                                    <field name="quantity" sum="Total"/>
                                    <field name="formula"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="total_cost" widget="monetary" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Summary by Size">
                            <field name="summary_by_size" nolabel="1" widget="html" readonly="1"/>
                        </page>
                        
                        <page string="Summary by Type">
                            <field name="summary_by_type" nolabel="1" widget="html" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>