<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Project List View -->
        <record id="view_greenhouse_project_tree" model="ir.ui.view">
            <field name="name">greenhouse.project.tree</field>
            <field name="model">greenhouse.project</field>
            <field name="arch" type="xml">
                <tree string="Greenhouse Projects">
                    <field name="name"/>
                    <field name="greenhouse_type_id"/>
                    <field name="state"/>
                    <field name="total_sections"/>
                    <field name="completed_inputs"/>
                    <field name="total_inputs"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- Project Form View -->
        <record id="view_greenhouse_project_form" model="ir.ui.view">
            <field name="name">greenhouse.project.form</field>
            <field name="model">greenhouse.project</field>
            <field name="arch" type="xml">
                <form string="Greenhouse Project">
                    <header>
                        <button name="action_calculate" string="Calculate" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="greenhouse_type_id"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Input Fields">
                                 <field name="input_data_ids">
									<tree editable="bottom">
										<field name="section_name" readonly="1"/>
										<field name="label" readonly="1"/>
										<field name="data_type" readonly="1"/>
										<field name="unified_value"/>
										<field name="help" readonly="1"/>
									</tree>
								</field>
                            </page>
                            <page string="Calculated Results">
                                <field name="calculated_data_ids">
                                    <tree>
                                        <field name="section_name"/>
                                        <field name="label"/>
                                        <field name="calculated_value" string="Result"/>
                                        <field name="calculated_total_length"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Project Action -->
        <record id="action_greenhouse_project" model="ir.actions.act_window">
            <field name="name">Greenhouse Projects</field>
            <field name="res_model">greenhouse.project</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Project Menu Link -->
        <menuitem id="menu_greenhouse_project_list" 
                  name="All Projects" 
                  parent="menu_greenhouse_projects" 
                  action="action_greenhouse_project" 
                  sequence="10"/>

    </data>
</odoo>