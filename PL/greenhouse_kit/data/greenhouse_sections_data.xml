<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Section Templates -->
        <record id="section_basic_dimensions" model="greenhouse.section.template">
            <field name="name">Basic Dimensions</field>
            <field name="code">basic_dimensions</field>
            <field name="description">Fundamental greenhouse dimensions and measurements</field>
            <field name="sequence">10</field>
        </record>

        <record id="section_frame_components" model="greenhouse.section.template">
            <field name="name">Frame Components</field>
            <field name="code">frame_components</field>
            <field name="description">Structural frame elements and columns</field>
            <field name="sequence">20</field>
        </record>

        <record id="section_truss_components" model="greenhouse.section.template">
            <field name="name">Truss Components</field>
            <field name="code">truss_components</field>
            <field name="description">Arch and truss structural elements</field>
            <field name="sequence">30</field>
        </record>

        <record id="section_side_screen" model="greenhouse.section.template">
            <field name="name">Side Screen Component</field>
            <field name="code">side_screen</field>
            <field name="description">Side screening and curtain systems</field>
            <field name="sequence">40</field>
        </record>

        <record id="section_lower_section" model="greenhouse.section.template">
            <field name="name">Lower Section Component</field>
            <field name="code">lower_section</field>
            <field name="description">Cross bracing and purlin systems</field>
            <field name="sequence">50</field>
        </record>

        <record id="section_gutter_system" model="greenhouse.section.template">
            <field name="name">Gutter System</field>
            <field name="code">gutter_system</field>
            <field name="description">Water drainage and gutter components</field>
            <field name="sequence">60</field>
        </record>

    </data>
</odoo>
