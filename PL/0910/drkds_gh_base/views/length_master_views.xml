<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_length_master_tree" model="ir.ui.view">
        <field name="name">greenhouse.length.master.tree</field>
        <field name="model">greenhouse.length.master</field>
        <field name="arch" type="xml">
            <tree string="Length Masters" editable="bottom">
                <field name="name"/>
                <field name="length_value"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_length_master" model="ir.actions.act_window">
        <field name="name">Length Masters</field>
        <field name="res_model">greenhouse.length.master</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>