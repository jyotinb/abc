<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pipe_management_tree" model="ir.ui.view">
        <field name="name">greenhouse.pipe.management.tree</field>
        <field name="model">greenhouse.pipe.management</field>
        <field name="arch" type="xml">
            <tree string="Pipes">
                <field name="display_name"/>
                <field name="weight"/>
                <field name="rate"/>
            </tree>
        </field>
    </record>

    <record id="action_pipe_management" model="ir.actions.act_window">
        <field name="name">Pipes</field>
        <field name="res_model">greenhouse.pipe.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_pipe_type" model="ir.actions.act_window">
        <field name="name">Pipe Types</field>
        <field name="res_model">greenhouse.pipe.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_pipe_size" model="ir.actions.act_window">
        <field name="name">Pipe Sizes</field>
        <field name="res_model">greenhouse.pipe.size</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_wall_thickness" model="ir.actions.act_window">
        <field name="name">Wall Thickness</field>
        <field name="res_model">greenhouse.pipe.wall.thickness</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>