<?xml version="1.0"?>
<odoo>
    <record id="view_fiscal_year_close_wizard_form" model="ir.ui.view">
        <field name="name">drkds.fiscal.year.close.wizard.form</field>
        <field name="model">drkds.fiscal.year.close.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="fiscal_year_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="closing_date"/>
                        <field name="opening_date"/>
                    </group>
                    <group>
                        <field name="closing_journal_id"/>
                        <field name="opening_journal_id"/>
                        <field name="profit_loss_account_id"/>
                        <field name="retained_earnings_account_id"/>
                    </group>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="action_close_fiscal_year" string="Close Fiscal Year" 
                            type="object" class="oe_highlight" 
                            confirm="Are you sure you want to close this fiscal year? This action cannot be undone."/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_fiscal_year_close_wizard" model="ir.actions.act_window">
        <field name="name">Close Fiscal Year</field>
        <field name="res_model">drkds.fiscal.year.close.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
