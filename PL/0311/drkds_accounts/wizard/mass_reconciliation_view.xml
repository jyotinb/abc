<?xml version="1.0"?>
<odoo>
    <record id="view_mass_reconciliation_wizard_form" model="ir.ui.view">
        <field name="name">drkds.mass.reconciliation.wizard.form</field>
        <field name="model">drkds.mass.reconciliation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="allow_partial"/>
                        <field name="max_amount_difference"/>
                    </group>
                </group>
                <footer>
                    <button name="action_reconcile" string="Reconcile" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_mass_reconciliation_wizard" model="ir.actions.act_window">
        <field name="name">Mass Reconciliation</field>
        <field name="res_model">drkds.mass.reconciliation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
