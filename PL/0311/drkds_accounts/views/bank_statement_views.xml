<?xml version="1.0"?>
<odoo>
    <record id="view_drkds_bank_reconciliation_tree" model="ir.ui.view">
        <field name="name">drkds.bank.reconciliation.tree</field>
        <field name="model">drkds.bank.reconciliation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="journal_id"/>
                <field name="date"/>
                <field name="statement_balance"/>
                <field name="book_balance"/>
                <field name="difference"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="view_drkds_bank_reconciliation_form" model="ir.ui.view">
        <field name="name">drkds.bank.reconciliation.form</field>
        <field name="model">drkds.bank.reconciliation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_reconcile" string="Reconcile" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="journal_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="statement_balance"/>
                            <field name="book_balance"/>
                            <field name="difference"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_drkds_bank_reconciliation" model="ir.actions.act_window">
        <field name="name">Bank Reconciliation</field>
        <field name="res_model">drkds.bank.reconciliation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
