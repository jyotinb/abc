<?xml version="1.0"?>
<odoo>
    <record id="view_drkds_analytic_distribution_tree" model="ir.ui.view">
        <field name="name">drkds.analytic.distribution.tree</field>
        <field name="model">drkds.analytic.distribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="view_drkds_analytic_distribution_form" model="ir.ui.view">
        <field name="name">drkds.analytic.distribution.form</field>
        <field name="model">drkds.analytic.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_drkds_analytic_distribution" model="ir.actions.act_window">
        <field name="name">Analytic Distributions</field>
        <field name="res_model">drkds.analytic.distribution</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
