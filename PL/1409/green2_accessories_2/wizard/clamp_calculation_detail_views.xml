<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Clamp Calculation Detail Line Tree View -->
    <record id="view_clamp_calculation_detail_line_tree" model="ir.ui.view">
        <field name="name">clamp.calculation.detail.line.tree</field>
        <field name="model">clamp.calculation.detail.line</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" decoration-info="clamp_type == 'Info'" 
                  decoration-success="category == 'GRAND TOTAL'">
                <field name="sequence" column_invisible="1"/>
                <field name="category" optional="show"/>
                <field name="component"/>
                <field name="clamp_type"/>
                <field name="size"/>
                <field name="quantity" sum="Total"/>
                <field name="formula"/>
                <field name="unit_price" widget="monetary" optional="hide"/>
                <field name="total_cost" widget="monetary" sum="Total Cost"/>
            </tree>
        </field>
    </record>

    <!-- Clamp Calculation Detail Form View -->
    <record id="view_clamp_calculation_detail_form" model="ir.ui.view">
        <field name="name">clamp.calculation.detail.form</field>
        <field name="model">clamp.calculation.detail</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button name="calculate_clamps" 
                            string="ðŸ“Š Calculate" 
                            type="object" 
                            class="btn-primary"
                            invisible="calculation_line_ids"/>
                    <button name="calculate_clamps" 
                            string="ðŸ”„ Recalculate" 
                            type="object" 
                            class="btn-warning"
                            invisible="not calculation_line_ids"/> -->
                    <button name="action_export_excel" 
                            string="ðŸ“¥ Export to Excel" 
                            type="object" 
                            class="btn-success"
                            invisible="not calculation_line_ids"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="green_master_display" readonly="1"  nolabel="1"/>
                        </h1>
                    </div>
                    
                    <group col="4">
                        <field name="calculation_date" readonly="1"/>
                        <newline/>
                        <field name="total_quantity" readonly="1" string="Total Quantity"/>
                        <field name="total_cost" readonly="1" widget="monetary" string="Total Cost"/>
                    </group>
                    
                    <notebook>
                        <page string="Calculation Details">
                            <field name="calculation_line_ids" nolabel="1" readonly="1">
                                <tree create="false" edit="false" delete="false"
                                      decoration-info="clamp_type == 'Info'" 
                                      decoration-warning="'BORDER' in category"
                                      decoration-success="'ARCH MIDDLE' in category"
                                      decoration-danger="'TOTAL' in category">
                                    <field name="category"/>
                                    <field name="component"/>
                                    <field name="clamp_type"/>
                                    <field name="size"/>
                                    <field name="quantity" sum="Total Quantity"/>
                                    <field name="formula"/>
                                    <field name="unit_price" widget="monetary" optional="hide"/>
                                    <field name="total_cost" widget="monetary" sum="Total Cost"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Summary by Size">
                            <group string="Size Distribution">
                                <div class="alert alert-info">
                                    <p>Summary of clamps grouped by size will be displayed here after calculation.</p>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Summary by Type">
                            <group string="Type Distribution">
                                <div class="alert alert-info">
                                    <p>Summary of clamps grouped by type will be displayed here after calculation.</p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                    
                    
                        <!-- <div class="alert alert-warning" role="alert" style="margin-top: 20px;"> -->
                            <strong>Note:</strong> This is a temporary calculation view. Data is not stored permanently.
                            Use "Export to Excel" to save the calculations.
                        <!-- </div> -->
                    
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clamp_calculation_detail" model="ir.actions.act_window">
        <field name="name">Clamp Calculation Details</field>
        <field name="res_model">clamp.calculation.detail</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_clamp_calculation_detail_form"/>
        <field name="target">new</field>
        <field name="context">{'default_green_master_id': active_id, 'dialog_size': 'extra-large'}</field>
    </record>

</odoo>